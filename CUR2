DECLARE
CURSOR CUR_PAISES IS SELECT * FROM PAISES;
TOTAL_HABITANTES INTEGER;
BEGIN
TOTAL_HABITANTES:=0;
FOR FILA IN CUR_PAISES LOOP
TOTAL_HABITANTES:=TOTAL_HABITANTES+FILA.HABITANTES;
DBMS_OUTPUT.PUT_LINE('NOMBRE:' ||FILA.NOMBRE||'HABITANTES:'||FILA.HABITANTES);
END LOOP;
DBMS_OUTPUT.PUT_LINE('HABITANTES DE LOS PAISES:'||TOTAL_HABITANTES);
END;


DECLARE
CURSOR CUR_ESTUDIANTES IS SELECT * FROM ESTUDIANTES;
CURSOR CUR_PAISES SELECT * FROM PAISES;

BEGIN

FOR J IN CUR_PAISES LOOP


FOR I IN CUR_ESTUDIANTES LOOP
DBMS_OUTPUT.PUT_LINE('NOMBRE:' ||I.NOMBRE||'HABITANTES:'||I.HABITANTES|| 'CARRERA:  ' ||I.CARRERA);
