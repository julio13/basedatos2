CREATE TABLE XXX(ID_XXX INTEGER, EDAD INTEGER);

CREATE OR REPLACE TRIGGER XXX_MAYOR_EDAD BEFORE INSERT ON XXX FOR EACH ROW

BEGIN

IF :NEW.EDAD< 18 THEN 
RAISE_APPLICATION_ERROR(-20001,'LO SIENTO CHAMACO PRECOZ;NO REGISTRADO');
END IF;
END;
/

INSERT INTO XXX VALUES(1,10);
SELECT * FROM XXX;



CREATE TABLE NOMINA_XXX(ID_NOMINAXXX INTEGER, LOGIN VARCHAR2(10), SALDO INTEGER);

INSERT INTO NOMINA_XXX VALUES (1,'YO',20000);

CREATE OR REPLACE TRIGGER ACTUALIZAR_SALDO BEFORE UPDATE ON NOMINA_XXX FOR EACH ROW 

BEGIN

:NEW.SALDO:=:NEW.SALDO+:OLD.SALDO;
END;
/
UPDATE NOMINA_XXX SET SALDO=-800 WHERE ID_NOMINAXXX=1;
SELECT * FROM NOMINA_XXX;
