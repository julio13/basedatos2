CREATE TABLE SIMPLE1(ID_SIMPLE INTEGER,EDAD INTEGER,NOMBRE VARCHAR2(40));
--LA LLENAMOS CON INFORMACION
DECLARE
MI_EDAD INTEGER;
BEGIN
MI_EDAD:=21;
FOR I IN 1..20 LOOP
MI_EDAD:=MI_EDAD+I;
INSERT INTO SIMPLE1 VALUES(I,MI_EDAD,'JULIO');
END LOOP;
END;
/
SELECT *FROM SIMPLE1;

--SE CREA LA VARIABLE DONDE SE DEPOSITA EL CURSOS (CREACION DE VARIABLES)
